                                <TextView
                                    android:layout_width="0.2dp"
                                    android:layout_height="fill_parent"
                                    android:layout_alignParentRight="true"
                                    />
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="match_parent"/>
                        <LinearLayout

