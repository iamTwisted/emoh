                        app:met_maxCharacters="20"
                        android:textSize="12sp"
                        android:inputType="textPersonName"
                        app:met_baseColor="@color/twilight"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        app:met_textColor="@color/black"
                        app:met_textColorHint="@color/colorPrimary"
                        app:met_underlineColor="@null"
                        app:met_floatingLabelTextColor="@color/colorPrimary"/>

                        <ImageButton
                            android:layout_marginTop="-67dp"
                            android:layout_marginRight="16dp"
                            android:layout_gravity="right"
                            android:padding="5dp"
                            android:src="@drawable/ic_009_search"
                            android:tint="@color/colorPrimaryDark"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/cercleshape"/>


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/categoriesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:padding="1sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="1dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:textColor="@color/black"
                        android:text="Categories"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="1sp"
                        android:layout_marginTop="-12dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="10sp"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:textColor="@color/bg_action_mode"
                        android:text="Find all about Coronavirus quickly"/>
                </LinearLayout>

                <LinearLayout

