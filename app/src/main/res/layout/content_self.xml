<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SymptomsActivity"
    tools:showIn="@layout/activity_self">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#B30288D1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:fontFamily="@font/calibri"
                android:textSize="12sp"
                android:layout_margin="3dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:gravity="center"
                android:text="Please Choose one of the following to initiate the official start of your self test exercise">


            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_margin="10dp"/>




            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:layout_marginTop="1dp"/>

            </LinearLayout>





            <LinearLayout
                android:id="@+id/buttonPanel"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:weightSum="2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Notify Authorities"
                    android:background="@drawable/bottom_selected"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btnDecline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Call 977"
                    android:textAllCaps="false"
                    android:background="@drawable/bottom_unselected"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

            </LinearLayout>



        </LinearLayout>



    <LinearLayout
        android:id="@+id/fixedPanel"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/categoriesTitle"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:padding="1sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:text="Symptoms"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1sp"
                android:layout_marginTop="-12dp"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:gravity="left"
                android:layout_gravity="left"
                android:textColor="@color/bg_action_mode"
                android:text="Helps you know if you are at Risk to Coronavirus"/>
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:scrollbars="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_mask"
                    android:layout_gravity="center"
                    android:tint="@color/green"
                    android:gravity="center"
                    android:background="@drawable/cercleshape"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Mask"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_gloves"
                    android:layout_gravity="center"
                    android:tint="#1E88E5"
                    android:gravity="center"
                    android:background="@drawable/cercleshapeblue"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Gloves"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_017_cleaning_spray"
                    android:layout_gravity="center"
                    android:tint="#F4511E"
                    android:gravity="center"
                    android:background="@drawable/cercleshapeorange"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Sanitizer"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_sponge_soap"
                    android:layout_gravity="center"
                    android:tint="#8E24AA"
                    android:gravity="center"
                    android:background="@drawable/cercleshapepurple"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Soap"/>


            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:padding="1sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:text="News &amp; Announcements"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1sp"
                android:layout_marginTop="-12dp"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:gravity="left"
                android:layout_gravity="left"
                android:textColor="@color/bg_action_mode"
                android:text="Learn more on what is happening now"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSymptoms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:layout_marginTop="1dp"/>

        </LinearLayout>


        </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
